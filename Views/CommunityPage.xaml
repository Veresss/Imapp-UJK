<?xml version="1.0" encoding="utf-8" ?>
<local:BasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:EmptyMauiApp.Views"
             x:Class="EmptyMauiApp.Views.CommunityPage"
            NavigationPage.HasNavigationBar="False">

    <local:BasePage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="{DynamicResource PrimaryColor}" Offset="0.0" />
            <GradientStop Color="{DynamicResource PrimaryColor}" Offset="1.0" />
        </LinearGradientBrush>
    </local:BasePage.Background>

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="0">
            <HorizontalStackLayout Padding="20,0" Margin="0,40,0,0">
                <Image Source="logo.png"
                    HeightRequest="60"
                    Aspect="AspectFit"/>
                <Label Text="Közösség"
                    FontFamily="AptosExtrabold"
                    FontSize="24"
                    TextColor="{DynamicResource SecondaryColor}"
                    VerticalOptions="Center"
                    Margin="10,0,0,0"/>
                <ImageButton Source="x_icon.png"
                        HorizontalOptions="End"
                        BackgroundColor="Transparent"
                        HeightRequest="60"
                        WidthRequest="60"
                        Clicked="OnBackButtonClicked"
                        Margin="100,0,0,0"/>
            </HorizontalStackLayout>

            <Label 
                Text="&lt;/&gt;"
                TextColor="{DynamicResource SecondaryColor}"
                WidthRequest="300"
                FontSize="80"
                FontFamily="AptosExtrabold"
                HorizontalTextAlignment="Center"
                LineBreakMode="WordWrap"
                VerticalTextAlignment="Center"
                Margin="0,200,0,-30" />

            <Label 
                Text="Ez a funkció még fejlesztés alatt áll"
                TextColor="{DynamicResource SecondaryColor}"
                WidthRequest="300"
                FontSize="26"
                FontFamily="AptosExtrabold"
                HorizontalTextAlignment="Center"
                LineBreakMode="WordWrap"
                VerticalTextAlignment="Center"
                Margin="0,0,0,0" />

        </VerticalStackLayout>
    </ScrollView>

</local:BasePage>