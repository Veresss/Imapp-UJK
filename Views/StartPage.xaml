<?xml version="1.0" encoding="utf-8" ?>
<local:BasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:EmptyMauiApp.Views"
             x:Class="EmptyMauiApp.Views.StartPage"
             NavigationPage.HasNavigationBar="False">

    <local:BasePage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="{DynamicResource PrimaryColor}" Offset="0.0" />
            <GradientStop Color="{DynamicResource PrimaryColor}" Offset="1.0" />
        </LinearGradientBrush>
    </local:BasePage.Background>

    <Grid RowDefinitions="1*, 0.6*, 1.2*, 1.2*, 1*, 1.5*, 0.5*, auto">

        <Image x:Name="TopImage"
               Grid.Row="1"
               Source="logo.png"
               Aspect="AspectFit"
               HeightRequest="60"
               HorizontalOptions="Center"/>

        <Label Grid.Row="2"
               x:Name="TitleLabel"
               FontFamily="AptosExtrabold"
               TextColor="{DynamicResource TitleColor}"
               FontSize="40"
               FontAttributes="Italic"
               HorizontalTextAlignment="Center"
               Margin="0, 10"/>

        <Image x:Name="MiddleImage"
               Grid.Row="3"
               Source="arrow.png"
               Aspect="AspectFit"
               HeightRequest="120"
               HorizontalOptions="Center"
               Margin="0, 10"/>

        <Border
            Grid.Row="4"
            WidthRequest="304"
            HeightRequest="84"
            StrokeThickness="2"
            StrokeShape="RoundRectangle 40"
            Stroke="Transparent"
            Padding="2"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            BackgroundColor="{DynamicResource ButtonColor}">

            <Button
                FontFamily="AptosExtrabold"
                Text="KATT IDE"
                Clicked="GoToMenuPage"
                CornerRadius="40"
                FontSize="32"
                WidthRequest="296"
                HeightRequest="76"
                TextColor="{DynamicResource ButtonTextColor}"
                HorizontalOptions="Center"
                VerticalOptions="Center">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="{DynamicResource TitleColor}" Offset="0.0" />
                        <GradientStop Color="{DynamicResource TitleColor}" Offset="0.5" />
                        <GradientStop Color="{DynamicResource TitleColor}" Offset="1.0" />
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
        </Border>

        <Label Grid.Row="5"
               x:Name="VerseLabel"
               FontFamily="AptosExtrabold"
               TextColor="{DynamicResource TitleColor}"
               FontSize="20"
               MaximumWidthRequest="300"
               LineBreakMode="WordWrap"
               HorizontalTextAlignment="Start"
               Margin="0, 20, 0, 0"/>
        
        <Label Grid.Row="6"
               x:Name="ReferenceLabel"
               FontFamily="AptosExtrabold"
                TextColor="{DynamicResource TitleColor}"
                FontSize="20"
                MaximumWidthRequest="300"
                LineBreakMode="WordWrap"
                HorizontalTextAlignment="End" />

        <Border Grid.Row="7"
                HeightRequest="100"
                Stroke="Transparent"
                Background="Transparent"/>

    </Grid>
</local:BasePage>