<?xml version="1.0" encoding="utf-8" ?>
<local:BasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:EmptyMauiApp.Views"
             x:Class="EmptyMauiApp.Views.HelperPage"
             NavigationPage.HasNavigationBar="False">

    <local:BasePage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="{DynamicResource PrimaryColor}" Offset="0.0" />
            <GradientStop Color="{DynamicResource PrimaryColor}" Offset="1.0" />
        </LinearGradientBrush>
    </local:BasePage.Background>

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="0">
            <HorizontalStackLayout Padding="20,0" Margin="0,40,0,0">
                <Image Source="logo.png"
                       HeightRequest="60"
                       Aspect="AspectFit"/>
                <Label Text="S.O.S."
                       FontFamily="AptosExtrabold"
                       FontSize="24"
                       TextColor="{DynamicResource SecondaryColor}"
                       VerticalOptions="Center"
                       Margin="10,0,0,0"/>
                <ImageButton Source="x_icon.png"
                             HorizontalOptions="End"
                             BackgroundColor="Transparent"
                             HeightRequest="60"
                             WidthRequest="60"
                             Clicked="OnBackButtonClicked"
                             Margin="140,0,0,0"/>
            </HorizontalStackLayout>

            <Label x:Name="HelpLabelQuestion"
                   Margin="25,20,25,20"
                   FontSize="26"
                   TextColor="{DynamicResource SecondaryColor}"
                   FontFamily="AptosExtrabold" 
                   HorizontalTextAlignment="Center"
                   LineBreakMode="WordWrap"/>

            <Border Stroke="{DynamicResource SecondaryTransparent}"
                    StrokeThickness="2"
                    StrokeShape="RoundRectangle 30"
                    HeightRequest="60"
                    WidthRequest="340"
                    BackgroundColor="{DynamicResource PrimaryTransparent}"
                    Padding="10,5"
                    HorizontalOptions="Fill">
                <Entry x:Name="TimeEntry" 
                       Placeholder="Pl. 30" 
                       PlaceholderColor="{DynamicResource SecondaryTransparent}"
                       Keyboard="Numeric" 
                       MaxLength="15"
                       WidthRequest="300"
                       HeightRequest="60"
                       TextColor="{DynamicResource SecondaryColor}"
                       FontFamily="AptosExtrabold"
                       FontSize="24"
                       TextChanged="OnTimeEntryTextChanged">
                </Entry>
            </Border>

            <Button Text="Mutasd az Imatervet" 
                    FontFamily="AptosExtrabold"
                    Clicked="OnGeneratePlanClicked" 
                    HeightRequest="60"
                    WidthRequest="340"
                    CornerRadius="30"
                    IsEnabled="False" 
                    x:Name="GenerateButton" />

            <Border x:Name="PlanBorder"
                    IsVisible="False"
                    Stroke="{DynamicResource SecondaryTransparent}"
                    StrokeThickness="2"
                    StrokeShape="RoundRectangle 30"
                    WidthRequest="340"
                    BackgroundColor="{DynamicResource PrimaryTransparent}"
                    Padding="0,20,0,20"
                    Margin="0,0,0,20"
                    HorizontalOptions="Fill">

                <VerticalStackLayout x:Name="PlanLayout" 
                                     Spacing="10" />
            </Border>


        </VerticalStackLayout>
    </ScrollView>

</local:BasePage>